{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",

    "strict": true,
    "jsx": "preserve",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "allowJs": true,
    "checkJs": false,

    "skipLibCheck": true,
    "sourceMap": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "rootDir": "src", 
    "declaration": true,   // ✅ 生成 .d.ts 类型文件
    "declarationDir": "dist/types", // ✅ 类型文件输出目录
    "types": ["node", "vue"],
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue", 
    "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "dist-prod"
  ]
}